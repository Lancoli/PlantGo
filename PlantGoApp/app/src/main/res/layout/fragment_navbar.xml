<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.NavbarFragment"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:background="@color/green"
    android:paddingVertical="10dp"
>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/my_plants_icon"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/plant_icon"
            android:contentDescription="liste des plantes"
            android:background="@color/green"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/my_plants_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Mes plantes"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
    <ImageView
        android:id="@+id/deconnexion_icon"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:src="@drawable/on_off_icon"
        android:contentDescription="action de deconnexion"
        android:background="@color/green"
        android:layout_weight="1"
    />
        <TextView
            android:id="@+id/deconnexion_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="DÃ©connexion"
            android:textColor="@color/white">

        </TextView>
    </LinearLayout>

</LinearLayout>